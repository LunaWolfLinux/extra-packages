pkgname=lunawolf-backgrounds
pkgver=1.0
pkgrel=0
pkgdesc="Default wallpapers for LunaWolf"
arch=('any')
url="https://github.com/LunaWolfLinux/extra-packages"
license=('GPL3')
groups=(lunawolf-wallpapers)
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. "$srcdir"
}

package() {
	local _bgdir="$pkgdir"/usr/share/backgrounds
	mkdir -p "$_bgdir"
	cp -r "$srcdir"/* "$_bgdir"
}