pkgname=lunawolf-cursor-breeze-dark
pkgver=1.0
pkgrel=2
pkgdesc="Breeze Dark Cursor theme for LunaWolf"
arch=('any')
url="https://github.com/LunaWolfLinux/extra-packages"
license=('GPL3')
groups=(lunawolf-cursors)
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. "$srcdir"
}

package() {
	local _cursorsdir="$pkgdir"/usr/share/icons
	mkdir -p "$_cursorsdir"
	cp -r "$srcdir"/* "$_cursorsdir"
}
