pkgname=lunawolf-neofetch
pkgver=1.0
pkgrel=0
pkgdesc="Neofetch for LunaWolf"
arch=('any')
url="https://github.com/LunaWolfLinux/extra-packages"
license=('GPL3')
conflicts=('neofetch')
options=(!strip !emptydirs)

source=('neofetch'
		'config.conf')

sha256sums=('df257ac9b55208179e9e99ce07dc3a55405bc08b64dcc3cdf894508d6f9b63a2'
            'e076edd4a4e571eb431b8efc5ba5da513c8c354c700e6aecdae7a5142382defc')

package() {
	install -Dm 755 neofetch   		"$pkgdir"/usr/bin/neofetch
	install -Dm 644 config.conf	    "$pkgdir"/etc/skel/.config/neofetch/config.conf
}
