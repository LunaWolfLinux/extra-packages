pkgname=lunawolf-artworks
pkgver=1.0
pkgrel=1
pkgdesc="Artworks (ascii, logos, icons) for LunaWolf"
arch=('any')
url="https://github.com/LunaWolfLinux/extra-packages"
license=('GPL3')
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. "$srcdir"
}

package() {
	(find * -type f -exec install -Dm 644 "{}" "$pkgdir/usr/share/lunawolf/artworks/{}" \;)
}
